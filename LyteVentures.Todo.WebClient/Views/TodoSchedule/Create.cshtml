@model LyteVentures.Todo.WebClient.Models.CreateTodoViewModel

@{
	ViewData["Title"] = "Create Todo";
}


<h3 class="text-primary">Create Todo Schedule</h3>
<hr />
<div class="row">
	<div class="col-md-5">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="StartSchedule" class="control-label"></label>
				<input asp-for="StartSchedule" class="form-control" />
				<span asp-validation-for="StartSchedule" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="EndSchedule" class="control-label"></label>
				<input asp-for="EndSchedule" class="form-control" />
				<span asp-validation-for="EndSchedule" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
<input type="hidden" id="error" value="@ViewBag.Message" />
<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	<script asp-append-version="true">
        $(document).ready(function () {
			var message = $("#error").val();
			if (message && message != "") {
				alert(message);
			}
        });
	</script>
}
