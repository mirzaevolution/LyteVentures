@model LyteVentures.Todo.WebClient.Models.UpdateTodoViewModel

@{
    ViewData["Title"] = "Edit Todo";
}


<h3 class="text-primary">Edit Todo Schedule</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
